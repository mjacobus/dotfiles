# Dunst notification daemon configuration
# vim: ft=ini
# Compatible with dunst 1.5.x

[global]
    ### Display ###
    monitor = 0
    follow = mouse

    ### Geometry ###
    # Format: {width}x{max_notifications}-{x_offset}-{y_offset}
    # Negative offsets = from right/bottom edge
    geometry = "400x4-15-35"
    shrink = no

    ### Appearance ###
    transparency = 5
    separator_height = 2
    padding = 16
    horizontal_padding = 16
    frame_width = 2
    frame_color = "#4c7899"
    separator_color = frame
    sort = yes

    ### Text ###
    font = DejaVu Sans Mono 11
    line_height = 4
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = end
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 48
    max_icon_size = 64
    icon_path = /usr/share/icons/gnome/48x48/status/:/usr/share/icons/gnome/48x48/devices/:/usr/share/icons/gnome/48x48/actions/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc ###
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/google-chrome --new-window
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false
    force_xinerama = false

    ### Mouse ###
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "#1e1e2e"
    foreground = "#a6adc8"
    timeout = 5
    frame_color = "#45475a"

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 10
    frame_color = "#89b4fa"

[urgency_critical]
    background = "#1e1e2e"
    foreground = "#f38ba8"
    frame_color = "#f38ba8"
    timeout = 0

# Application specific rules
[slack]
    appname = Slack
    urgency = normal
    background = "#1e1e2e"
    frame_color = "#4c7899"

[zoom]
    appname = zoom
    urgency = normal
    background = "#1e1e2e"
    frame_color = "#2d88ff"

[chromium]
    appname = Chromium
    markup = strip
