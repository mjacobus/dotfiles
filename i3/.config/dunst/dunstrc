[global]
    # Set the position to bottom right
    geometry = "300x5-10-30"
    # Set the notification to disappear after 2 seconds
    linger_time = 10

    # Define the format of the notification, including a link
    # %a is the app name, %s is the summary, %b is the body, %U is the URL
    format = "<b>%s</b>\n%b\n%U"

[urgency_low]
    # Low urgency notifications settings
    background = "#222222"
    foreground = "#888888"
    timeout = 5

[urgency_normal]
    background = "#285577"
    foreground = "#FFFFFF"
    timeout = 5

[urgency_critical]
    background = "#900000"
    foreground = "#FFFFFF"
    timeout = 0

[keybindings]
    # Set 'ctrl+shift+period' to open the URL in the notification
    # You can change the keybinding to your preference
    browser = "ctrl+shift+period"

