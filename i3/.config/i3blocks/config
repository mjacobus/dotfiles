# Query my default IP address only on startup
[ip]
command=hostname -i | awk '{ print "IP:" $1 }'
interval=once
color=#91E78B

# Update time every 5 seconds

[date]
# display date in format DD/MM/YYYY
command=date +%d/%m/%Y
interval=5
color=#FFFF00

[time]
command=date +%T
interval=5
color=#00FF00
