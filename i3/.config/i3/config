# Assign workspaces to specific monitors
# Workspaces 8-10 will fall back to DisplayPort-0 if DisplayPort-1 is disconnected
workspace 1 output DisplayPort-0
workspace 2 output DisplayPort-0
workspace 3 output DisplayPort-0
workspace 4 output DisplayPort-0
workspace 5 output DisplayPort-0
workspace 6 output DisplayPort-0
workspace 7 output DisplayPort-0
workspace 8 output DisplayPort-1 DisplayPort-0
workspace 9 output DisplayPort-1 DisplayPort-0
workspace 10 output DisplayPort-1 DisplayPort-0

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
