#!/usr/bin/env bash

args=$@

git submodule init
git submodule update

flags="--verbose=1 -t $HOME"

if [[ "$args" == "--uninstall" ]]; then
  echo 'Uninstalling'
  flags="-D --verbose=1 -t $HOME"
fi

stow $flags ag
stow $flags asdf
stow $flags bin
stow $flags ctags
stow $flags git
stow $flags ruby_config
stow $flags shells
stow $flags tmux
stow $flags vim
stow $flags zshell
stow $flags bash
stow $flags neovim
stow $flags alacritty
stow $flags kitty
stow $flags base16-shell
