#!/usr/bin/env bash

# This keeps the ssh-agent var set accross terminals
# There may or may not be risks involved

# config file
file=~/.profile.d.local/ssh.conf

eval "$(ssh-agent -s)" && ssh-add


echo "# File auto generated by $0" > $file

for var in `env | grep 'SSH_AUTH_SOCK='`; do
  echo "export $var" >> $file
done

chmod 600 $file
