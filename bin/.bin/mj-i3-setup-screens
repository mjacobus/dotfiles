#!/usr/bin/env bash


xrandr | grep " connected"

# Example
# DisplayPort-4 connected 1920x1080+0+0 (normal left inverted right x axis y axis) 598mm x 336mm
# DisplayPort-5 connected primary 2560x1080+1920+0 (normal left inverted right x axis y axis) 798mm x 334mm
# DVI-I-2-1 connected 2560x1080+4480+0 (normal left inverted right x axis y axis) 798mm x 334m
#

left="DisplayPort-4"
main="DisplayPort-5"

for i in $(echo 6); do
  echo "Setting workspace $i to output $left"
  i3-msg "workspace $i; move workspace to output $left" > /dev/null
done

for i in $(echo 1 2 3 4 5 7 8 9 10); do
  echo "Setting workspace $i to output $main"
  i3-msg "workspace $i; move workspace to output $main" > /dev/null
done

